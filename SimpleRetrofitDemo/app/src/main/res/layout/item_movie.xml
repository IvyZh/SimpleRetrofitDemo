<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:layout_height="120dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_centerVertical="true"
            android:src="@mipmap/iv_cover"
            android:layout_width="60dp"
            android:layout_height="90dp" />


        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:text="肖申克的救赎"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title" />

            <TextView
                android:layout_below="@id/tv_title"
                android:text="导演:弗兰克·德拉邦特"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_directors" />

            <TextView
                android:layout_below="@id/tv_directors"
                android:text="主演:蒂姆·罗宾斯"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_casts" />

            <TextView
                android:layout_below="@id/tv_casts"
                android:text="1994"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_year" />

            <TextView
                android:layout_below="@id/tv_casts"
                android:text="/"
                android:layout_toRightOf="@id/tv_year"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_divide" />

            <TextView
                android:layout_below="@id/tv_casts"
                android:text="犯罪 剧情"
                android:layout_toRightOf="@id/tv_divide"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_genres" />


            <RatingBar
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:id="@+id/rb_rating"
                android:layout_below="@id/tv_casts"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:numStars="5"
                android:rating="3.5"
                android:isIndicator="false"
                style="@style/foodRatingBar" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
